fun main()
{
 var arr= arrayOf("Raj","Shyam","Nagar","Romil")
 var arr1= arrayOf(1,2,45)
    var arr2= arrayOf<Int>(5,6,7)
    for((i,e) in arr.withIndex())
    {
        println("$i -> $e")
    }

    //two methods to get the element
    println(arr[2])
    println(arr.get(3))
    arr.set(0,"Hello")
    for((i,e) in arr.withIndex())
    {
        println("$i -> $e")
    }
    println("arr size is ${arr.size}")
}
