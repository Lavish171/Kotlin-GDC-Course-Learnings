package Learning_Kotlin
fun main()
{
  var mustang=Car("Baleano","Petrol",1500)
  var beetle=Car("beetle","Petrol",20000)
    mustang.drivecar()
    beetle.drivecar()
    mustang.applybrake()
    beetle.applybrake()
    println(mustang.name)
    println(beetle.kmran)
}

class Car(val name:String,val type:String,var kmran:Int)
{
    fun drivecar()
    {
        println(" $name Car is driving")
    }

    fun applybrake()
    {
        println("Breakes are applied")
    }
}
